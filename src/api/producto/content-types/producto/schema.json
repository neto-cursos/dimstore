{
  "kind": "collectionType",
  "collectionName": "productos",
  "info": {
    "singularName": "producto",
    "pluralName": "productos",
    "displayName": "Productos",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "prod_nombre": {
      "type": "string",
      "required": true,
      "maxLength": 254
    },
    "prod_modelo": {
      "type": "string"
    },
    "prod_estado": {
      "type": "boolean",
      "default": true
    },
    "prod_descripcion": {
      "type": "richtext"
    },
    "marca": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::marca.marca",
      "inversedBy": "productos"
    },
    "prod_cantidad": {
      "type": "biginteger",
      "required": true,
      "min": "0",
      "default": "1"
    },
    "prod_precio": {
      "type": "decimal",
      "min": 0,
      "required": true
    },
    "prod_imagen_perfil": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "prod_imagen_camara": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "prod_condicion": {
      "type": "enumeration",
      "enum": [
        "Nuevo",
        "Usado",
        "Repuesto",
        "Defectuoso"
      ],
      "default": "Repuesto",
      "required": true
    },
    "Dimensiones": {
      "displayName": "Dimensiones",
      "type": "component",
      "repeatable": false,
      "component": "dimensiones.dimensiones"
    },
    "descuentos": {
      "type": "component",
      "repeatable": false,
      "component": "promociones.descuentos"
    },
    "subcategoria": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::subcategoria.subcategoria",
      "inversedBy": "producto"
    },
    "slug": {
      "type": "uid",
      "targetField": "prod_nombre",
      "required": true
    },
    "prod_precio_anterior": {
      "type": "decimal"
    }
  }
}
